<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!--todo separator top decor view layout-->

    <!--todo middle layout-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Gray_Goose"
        android:orientation="vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_blue_color"
            android:gravity="center"
            android:minHeight="100dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:paddingRight="20dp"
            android:paddingBottom="4dp"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_margin5"
                android:layout_weight="1"
                android:padding="@dimen/size_margin5"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/lnr_inventory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ad_selectable_background">

                    <ImageView
                        android:layout_width="@dimen/size_margin50"
                        android:layout_height="@dimen/size_margin50"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:padding="10dp"
                        android:src="@drawable/people_icon"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minHeight="50dp"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/inventoryTV"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="bottom|center_horizontal"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/size_tv16"
                            android:textStyle="bold"
                            tools:text="00" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="top"
                            android:text="( Inventory in No. )"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/size_tv_vsmall" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_margin5"
                android:layout_weight="1"
                android:padding="@dimen/size_margin5"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/lnr_rewards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ad_selectable_background">

                    <ImageView
                        android:layout_width="@dimen/size_margin50"
                        android:layout_height="@dimen/size_margin50"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:padding="10dp"
                        android:src="@drawable/people_icon"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:minHeight="50dp"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tertiaryTV"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="bottom|center_horizontal"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/size_tv16"
                            android:textStyle="bold"
                            tools:text="\u20B9 000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="top"
                            android:text="( Sales in No. )"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/size_tv_vsmall" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

    <!-- todo scan barcode option here -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Gray_Goose"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="@color/app_blue_color"
            android:gravity="center"
            android:minHeight="@dimen/size_margin100"
            android:orientation="vertical"
            android:paddingLeft="@dimen/size_margin10"
            android:paddingRight="@dimen/size_margin10"
            android:visibility="visible">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/size_margin20"
                android:padding="@dimen/size_margin5"
                app:cardCornerRadius="6dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <Button
                    android:id="@+id/scanButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ad_selectable_background"
                    android:drawableLeft="@drawable/ic_camera_24dp"
                    android:drawablePadding="@dimen/size_margin5"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:paddingLeft="@dimen/size_margin10"
                    android:paddingTop="@dimen/size_margin10"
                    android:paddingRight="@dimen/size_margin10"
                    android:paddingBottom="@dimen/size_margin10"
                    android:text="Scan Tertiary"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/size_tv_medium" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/schemeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/size_margin10"
                android:text="@string/text_current_scheme"
                android:textSize="@dimen/size_tv16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_margin5"
                android:background="@color/app_blue_color"
                android:orientation="vertical"
                android:paddingBottom="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:minHeight="@dimen/size_margin20"
                    android:paddingLeft="@dimen/size_margin10"
                    android:paddingRight="@dimen/size_margin10"
                    android:visibility="visible">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/size_margin20"
                        android:padding="@dimen/size_margin5"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                        <Button
                            android:id="@+id/other1BTN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ad_selectable_background"
                            android:padding="@dimen/size_margin10"
                            android:text="@string/other_link_1"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/size_tv_medium" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/size_margin20"
                        android:padding="@dimen/size_margin5"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                        <Button
                            android:id="@+id/other2BTN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ad_selectable_background"
                            android:padding="@dimen/size_margin10"
                            android:text="@string/other_link_2"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/size_tv_medium" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <!--todo here separate -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_margin1"
            android:background="@color/White"
            android:gravity="center_horizontal|bottom"
            android:text="Local history of scanning"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:divider="@null"
            android:orientation="horizontal"
            android:scrollbars="none"
            android:scrollingCache="true"
            android:smoothScrollbar="true"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>