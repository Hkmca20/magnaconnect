<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    card_view:cardBackgroundColor="@color/White"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_margin10"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|bottom">

            <LinearLayout
                android:id="@+id/pdf_download_lnr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_margin20"
                android:background="@drawable/app_button3"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_margin20"
                android:paddingTop="@dimen/size_margin5"
                android:paddingRight="@dimen/size_margin20"
                android:paddingBottom="@dimen/size_margin5">

                <TextView
                    android:id="@+id/buttonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_margin5"
                    android:text="Download pdf here"
                    android:textColor="@drawable/button_text_color"
                    android:textSize="@dimen/size_tv_small" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:tint="@color/White"
                    app:srcCompat="@drawable/ic_file_download" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/imgRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/dotted_border_layout"
            android:minHeight="300dp">

            <ImageView
                android:id="@+id/smallImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_hourglass_full"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/bigIV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="fitXY" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>